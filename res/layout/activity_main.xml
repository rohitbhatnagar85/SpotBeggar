<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/loginbut"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_above="@+id/loginbut2"
        android:layout_alignLeft="@+id/loginbut2"
        android:layout_marginBottom="15dp"
        android:background="@drawable/fb" />

    <ImageButton
        android:id="@+id/loginbut3"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/google" />

    <ImageButton
        android:id="@+id/loginbut2"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_above="@+id/loginbut3"
        android:layout_alignLeft="@+id/loginbut3"
        android:layout_marginBottom="17dp"
        android:background="@drawable/tw" />

</RelativeLayout>